<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="curso.android.minitwitter.ui.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_tweets_like"
        android:name="curso.android.minitwitter.ui.ui.dashboard.DashboardFragment"
        android:label="@string/tweets_label"
        tools:layout="@layout/fragment_dashboard" />


    <fragment
        android:id="@+id/navigation_profile"
        android:name="curso.android.minitwitter.ui.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>
